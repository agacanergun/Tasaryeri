@using Tasaryeri.WebUI.Models;
@model List<ShoppingCart>

<link rel="stylesheet" href="/assetsUI/css/ShoppingCart.css" />
<br />
<br />
<div class="card">
    <div class="row">
        <div class="col-md-8 cart">
            <div class="title">
                <div class="row">
                    <div class="col text-center"><h4><b>Sepetim</b></h4></div>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="row main align-items-center">
                        <div class="col-2"><img class="img-fluid" src="https://i.imgur.com/ba3tvGm.jpg"></div>
                        <div class="col">
                            <div class="row text-muted">Shirt</div>
                            <div class="row">Cotton T-shirt</div>
                        </div>
                        <div class="col">
                            <a href="#">-</a><a href="#" class="border">1</a><a href="#">+</a>
                        </div>
                        <div class="col">&euro; 44.00 <span class="close">&#10005;</span></div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4 summary">
            <div class="text-center"><h5><b>Özet</b></h5></div>
            <hr>
            <p>İndirim Kuponu</p>
            <input id="code" placeholder="Kupon Kodu">
            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col">Toplam Tutar</div>
                <div class="col text-right">500 TL</div>
            </div>
            <a style="border-radius:6px;" class="btn">Satın Al</a>
        </div>
    </div>
</div>
<br />
<br />