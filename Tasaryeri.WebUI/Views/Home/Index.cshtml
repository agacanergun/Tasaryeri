@model HomeIndexVM


<!-- Start Content -->
<div class="container py-5">
    <div class="row">

        <partial name="_Categories" />

        <div class="col-lg-9">



            <!-- Start Banner Hero -->
            <div id="template-mo-zay-hero-carousel" style="border-radius: 12px;" class="carousel slide"
                 data-bs-ride="carousel">
                <ol class="carousel-indicators">

                    @for (int i = 0; i < Model.Slides.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="@i"></li>
                        }


                    }
                </ol>
                <div class="carousel-inner">

                    @{
                        int num = 0;

                        foreach (var item in Model.Slides)
                        {
                            if (num == 0)
                            {
                                <div class="carousel-item active">
                                    <div class="container">
                                        <div class="row p-5">
                                            <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                                                <img class="img-fluid" src="/@item.Picture" alt="">
                                            </div>
                                            <div class="col-lg-6 mb-0 d-flex align-items-center">
                                                <div class="text-align-left">
                                                    <h1 class="h1">@item.Title</h1>
                                                    <h3 class="h2">@item.ShortDescription</h3>
                                                    <p>
                                                        @item.LongDescription
                                                    </p>
                                                    <p><a href="@item.Link" class="btn btn-success">Görüntüle</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                num++;
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <div class="container">
                                        <div class="row p-5">
                                            <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                                                <img class="img-fluid" src="/@item.Picture" alt="">
                                            </div>
                                            <div class="col-lg-6 mb-0 d-flex align-items-center">
                                                <div class="text-align-left">
                                                    <h1 class="h1">@item.Title</h1>
                                                    <h3 class="h2">@item.ShortDescription</h3>
                                                    <p>
                                                        @item.LongDescription
                                                    </p>
                                                    <p><a href="@item.Link" class="btn btn-success">Görüntüle</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
                <a class="carousel-control-prev text-decoration-none w-auto ps-3"
                   href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
                    <i class="fas fa-chevron-left"></i>
                </a>
                <a class="carousel-control-next text-decoration-none w-auto pe-3"
                   href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
            <!-- End Banner Hero -->
            <br>

            <div class="row">
                <div class="col-md-12" style="text-align: center;">
                    <ul class="list-inline shop-top-menu pb-3 pt-1">
                        <li class="list-inline-item">
                            <a class="h3 text-dark text-decoration-none mr-3" href="#">Çok Beğenilenler</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">

                @for (int i = 0; i < 9; i++)
                {
                    var product = Model.RandomProducts[i];

                        <partial name="_Product" model="@product" />
                }

            </div>
            <div class="row">
                <div class="col-md-6 col-lg-3 pb-5">
                    <div class="h-100 py-5 services-icon-wap shadow">
                        <div class="h1 text-success text-center"><i class="fa fa-laptop-medical"></i></div>
                        <h2 class="h5 mt-4 text-center">Beğendiğiniz Ürünü Satın Alın</h2>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 pb-5">
                    <div class="h-100 py-5 services-icon-wap shadow">
                        <div class="h1 text-success text-center"><i class="fa fa-truck fa-lg"></i></div>
                        <h2 class="h5 mt-4 text-center">Üretici Ürünü Size Göndersin</h2>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 pb-5">
                    <div class="h-100 py-5 services-icon-wap shadow">
                        <div class="h1 text-success text-center"><i class="fa fa-user"></i></div>
                        <h2 class="h5 mt-4 text-center">
                            Ürünü Teslim Alıp Kontrol Edin
                        </h2>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 pb-5">
                    <div class="h-100 py-5 services-icon-wap shadow">
                        <div class="h1 text-success text-center"><i class="fa fa-money-bill"></i></div>
                        <h2 class="h5 mt-4 text-center">Bir Sorun Yoksa Ödeme Üreticiye Geçsin</h2>
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col-md-12" style="text-align: center;">
                    <ul class="list-inline shop-top-menu pb-3 pt-1">
                        <li class="list-inline-item">
                            <a class="h3 text-dark text-decoration-none mr-3" href="#">İlgini Çekebilir</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                @for (int i = 0; i < 9; i++)
                {
                    var product = Model.RandomProducts[i];

                    <partial name="_Product" model="@product" />
                }
            </div>
        </div>
    </div>
</div>
<!-- End Content -->
