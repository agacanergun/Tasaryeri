            <!-- Start Banner Hero -->
            <div id="template-mo-zay-hero-carousel" style="border-radius: 12px;" class="carousel slide"
                 data-bs-ride="carousel">
                <ol class="carousel-indicators">

                    @for (int i = 0; i < Model.Slides.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="@i"></li>
                        }


                    }
                </ol>
                <div class="carousel-inner">

                    @{
                        int num = 0;

                        foreach (var item in Model.Slides)
                        {
                            if (num == 0)
                            {
                                <div class="carousel-item active">
                                    <div class="container">
                                        <div class="row p-5">
                                            <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                                                <img class="img-fluid" src="/@item.Picture" alt="">
                                            </div>
                                            <div class="col-lg-6 mb-0 d-flex align-items-center">
                                                <div class="text-align-left">
                                                    <h1 class="h1">@item.Title</h1>
                                                    <h3 class="h2">@item.ShortDescription</h3>
                                                    <p>
                                                        @item.LongDescription
                                                    </p>
                                                    <p><a href="@item.Link" class="btn btn-success">Görüntüle</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                num++;
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <div class="container">
                                        <div class="row p-5">
                                            <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                                                <img class="img-fluid" src="/@item.Picture" alt="">
                                            </div>
                                            <div class="col-lg-6 mb-0 d-flex align-items-center">
                                                <div class="text-align-left">
