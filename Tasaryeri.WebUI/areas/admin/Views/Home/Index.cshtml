@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--=============== REMIXICONS ===============-->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="assetsAdminLogin/css/styles.css">

    <title>Animated login form - Bedimcode</title>
</head>
<body>
    <div class="login">
        <img src="assetsAdminLogin/img/login-bg.png" alt="login image" class="login__img">

        <form method="post" asp-area="admin" asp-controller="Home" asp-action="Index" class="login__form">
            <h1 class="login__title">Admin</h1>

            <div class="login__content">
                <div class="login__box">
                    <i class="ri-user-3-line login__icon"></i>

                    <div class="login__box-input">
                        <input type="text" name="Username" required class="login__input" placeholder=" ">
                        <label for="" class="login__label">Username</label>
                    </div>
                </div>

                <div class="login__box">
                    <i class="ri-lock-2-line login__icon"></i>

                    <div class="login__box-input">
                        <input type="password" name="Password" required class="login__input" id="login-pass" placeholder=" ">
                        <label for="" class="login__label">Password</label>
                        <i class="ri-eye-off-line login__eye" id="login-eye"></i>
                    </div>
                </div>
                <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                <span style="display:block;color:aliceblue;text-align:center">@ViewBag.Error</span>
            </div>
            <button type="submit" class="login__button">Giriş</button>

        </form>
    </div>
    <!--=============== MAIN JS ===============-->
    <script src="assetsAdminLogin/js/main.js"></script>
</body>
</html>